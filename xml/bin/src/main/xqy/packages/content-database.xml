<package-database xmlns="http://marklogic.com/manage/package/databases">
    <config>
        <package-database-properties>
            <range-element-indexes>
                <range-element-index>
                    <scalar-type>gYear</scalar-type>
                    <namespace-uri>http://marklogic.com/xdmp/json/basic</namespace-uri>
                    <localname>year</localname>
                    <collation/>
                    <range-value-positions>false</range-value-positions>
                    <invalid-values>reject</invalid-values>
                </range-element-index>
                <range-element-index>
                    <scalar-type>double</scalar-type>
                    <namespace-uri>http://marklogic.com/xdmp/json/basic</namespace-uri>
                    <localname>price</localname>
                    <collation/>
                    <range-value-positions>false</range-value-positions>
                    <invalid-values>reject</invalid-values>
                </range-element-index>
                <range-element-index>
                    <scalar-type>string</scalar-type>
                    <namespace-uri>http://marklogic.com/xdmp/json/basic</namespace-uri>
                    <localname>categories</localname>
                    <collation>http://marklogic.com/collation/</collation>
                    <range-value-positions>false</range-value-positions>
                    <invalid-values>reject</invalid-values>
                </range-element-index>
            </range-element-indexes>
            <range-path-indexes>
                <range-path-index>
                    <scalar-type>string</scalar-type>
                    <path-expression>//categories/category</path-expression>
                    <collation>http://marklogic.com/collation/</collation>
                    <range-value-positions>false</range-value-positions>
                    <invalid-values>reject</invalid-values>
                </range-path-index>
            </range-path-indexes>
        </package-database-properties>
    </config>
</package-database>